                     <Insets top="10.0" />
                  </VBox.margin></Label>
                    <VBox fx:id="idUserList" prefHeight="297.0" prefWidth="232.0">
                        <fx:include source="MemberListSubView.fxml"/>
                    </VBox>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
                </VBox>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            </ScrollPane>
        </VBox>
        <VBox fx:id="idChatContainer" prefHeight="350.0" prefWidth="500.0">
