        <VBox prefHeight="329.0" prefWidth="234.0">
            <HBox.margin>
                <Insets left="10.0" />
            </HBox.margin>
            <ScrollPane fx:id="idUserInLobby" prefHeight="344.0" prefWidth="234.0" styleClass="memberList">
                <VBox alignment="TOP_CENTER" prefHeight="322.0" prefWidth="232.0">
