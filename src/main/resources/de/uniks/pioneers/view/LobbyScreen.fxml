<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="900.0" spacing="12.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.pioneers.controller.LobbyController">
   <HBox alignment="CENTER" maxHeight="40.0" prefWidth="200.0" spacing="7.0">
      <Button fx:id="rulesButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#rulesButtonPressed" styleClass="blueButton" text="Rules" />
      <Label fx:id="userWelcomeLabel" prefHeight="20.0" prefWidth="600.0" style="-fx-text-fill: orange; -fx-font-size: 18" text="Nice to see you again, ">
      </Label>
      <Button fx:id="logoutButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#logoutButtonPressed" styleClass="redButton" text="Logout" />
   </HBox>
   <HBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="15.0">
      <ScrollPane fx:id="userScrollPane" prefHeight="200.0" prefWidth="300.0" styleClass="lobby">
         <VBox prefHeight="480.0" prefWidth="280.0" spacing="5.0" />
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </ScrollPane>
      <VBox minWidth="240.0" prefHeight="200.0" prefWidth="300.0">
         <TabPane fx:id="tabPane" prefHeight="500.0" prefWidth="300.0" styleClass="lobby" tabClosingPolicy="UNAVAILABLE">
            <Tab fx:id="allTab" closable="false" text="all">
               <ScrollPane prefHeight="200.0" prefWidth="200.0">
                  <VBox prefHeight="300.0" prefWidth="220.0" />
               </ScrollPane>
            </Tab>
         </TabPane>
         <HBox prefHeight="40.0" prefWidth="400.0">
            <TextField fx:id="chatMessageField" onKeyPressed="#enterKeyPressed" prefHeight="30.0" prefWidth="350.0" styleClass="send">
               <HBox.margin>
                  <Insets left="15.0" top="15.0" />
               </HBox.margin></TextField>
            <Button fx:id="sendButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#sendButtonPressed" styleClass="send" text="send" />
         </HBox>
      </VBox>
      <ScrollPane fx:id="gamesScrollPane" prefHeight="200.0" prefWidth="280.0" styleClass="gamelist">
         <VBox prefHeight="480.0" prefWidth="240.0" spacing="4.0">
            <opaqueInsets>
               <Insets />
            </opaqueInsets></VBox>
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </ScrollPane>
   </HBox>
   <HBox alignment="CENTER" maxHeight="40.0" prefHeight="100.0" prefWidth="200.0" spacing="12.0">
      <Button fx:id="editUserButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#editButtonPressed" styleClass="blueButton" text="Edit User" />
      <Pane prefHeight="40.0" prefWidth="580.0">
      </Pane>
      <Button fx:id="rejoinButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onRejoin" prefHeight="26.0" prefWidth="78.0" styleClass="blueButton" text="Rejoin" />
      <Button fx:id="createGameButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#createGameButtonPressed" styleClass="greenButton" text="Create Game" />
   </HBox>
</VBox>
