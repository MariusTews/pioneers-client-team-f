<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" spacing="12.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.pioneers.controller.LobbyController">
   <children>
      <HBox alignment="BOTTOM_CENTER" maxHeight="40.0" prefWidth="200.0" spacing="60.0">
         <children>
            <Button fx:id="rulesButton" mnemonicParsing="false" onAction="#rulesButtonPressed" text="Rules" />
