               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logoutButtonPressed" text="Logout" />
         </children>
      </HBox>
      <HBox prefHeight="400.0" prefWidth="600.0" spacing="12.0">
         <children>
            <ListView fx:id="userListView" maxWidth="180.0" prefHeight="200.0" prefWidth="200.0" />
            <VBox minWidth="240.0" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TabPane fx:id="tabPane" prefHeight="370.0" prefWidth="240.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                      <Tab fx:id="allTab" closable="false" text="all">
                           <content>
                              <ScrollPane prefHeight="200.0" prefWidth="200.0">
                                 <content>
                                    <VBox prefHeight="300.0" prefWidth="220.0" />
                                 </content>
                              </ScrollPane>
                           </content></Tab>
                    </tabs>
                  </TabPane>
                  <HBox prefHeight="30.0" prefWidth="240.0" spacing="6.0">
                     <children>
                        <TextField fx:id="chatMessageField" onKeyPressed="#enterKeyPressed" prefHeight="25.0" prefWidth="190.0" />
                        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendButtonPressed" text="send" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <ListView fx:id="gameListView" maxWidth="180.0" prefHeight="120.0" prefWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" maxHeight="40.0" prefHeight="100.0" prefWidth="200.0" spacing="12.0">
         <children>
            <Button fx:id="editUserButton" mnemonicParsing="false" onAction="#editButtonPressed" text="Edit User" />
            <Pane prefHeight="40.0" prefWidth="360.0" />
            <Button fx:id="createGameButton" mnemonicParsing="false" onAction="#createGameButtonPressed" text="Create Game" />
         </children>
      </HBox>
   </children>
