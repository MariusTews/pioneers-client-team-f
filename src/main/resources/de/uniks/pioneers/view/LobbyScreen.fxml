<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" spacing="12.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.pioneers.controller.LobbyController">
   <children>
      <HBox alignment="CENTER" maxHeight="40.0" prefWidth="200.0" spacing="120.0">
         <children>
            <Button fx:id="rulesButton" mnemonicParsing="false" onAction="#rulesButtonPressed" text="Rules" />
            <Label fx:id="userWelcomeLabel" prefHeight="40.0" prefWidth="300.0" text="Nice to see you again, ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logoutButtonPressed" text="Logout" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="3.0">
         <children>
            <ScrollPane fx:id="userScrollPane" prefHeight="200.0" prefWidth="300.0">
               <content>
                  <VBox prefHeight="480.0" prefWidth="290.0" spacing="6.0" />
               </content>
            </ScrollPane>
            <VBox minWidth="240.0" prefHeight="200.0" prefWidth="240.0">
               <children>
                  <TabPane fx:id="tabPane" prefHeight="480.0" prefWidth="240.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                      <Tab fx:id="allTab" closable="false" text="all">
                           <content>
                              <ScrollPane prefHeight="200.0" prefWidth="200.0">
                                 <content>
                                    <VBox prefHeight="300.0" prefWidth="220.0" />
                                 </content>
                              </ScrollPane>
                           </content></Tab>
                    </tabs>
                  </TabPane>
                  <HBox prefHeight="30.0" prefWidth="240.0" spacing="6.0">
                     <children>
                        <TextField fx:id="chatMessageField" onKeyPressed="#enterKeyPressed" prefHeight="25.0" prefWidth="190.0" />
                        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendButtonPressed" text="send" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <ScrollPane fx:id="gamesScrollPane" prefHeight="200.0" prefWidth="250.0">
               <content>
                  <VBox prefHeight="480.0" prefWidth="240.0" spacing="6.0" />
               </content>
            </ScrollPane>
         </children>
      </HBox>
      <HBox alignment="CENTER" maxHeight="40.0" prefHeight="100.0" prefWidth="200.0" spacing="12.0">
         <children>
            <Button fx:id="editUserButton" mnemonicParsing="false" onAction="#editButtonPressed" text="Edit User" />
            <Pane prefHeight="39.0" prefWidth="452.0" />
            <Button fx:id="rejoinButton" mnemonicParsing="false" onAction="#onRejoin" prefHeight="24.0" prefWidth="105.0" text="Rejoin" />
            <Button fx:id="createGameButton" mnemonicParsing="false" onAction="#createGameButtonPressed" text="Create Game" />
         </children>
      </HBox>
   </children>
</VBox>
