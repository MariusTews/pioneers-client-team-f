<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" spacing="12.0" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.pioneers.controller.SignUpController">
    <Label styleClass="title" text="Create a new pioneer">
    </Label>
    <Pane prefHeight="25.0" prefWidth="600.0"/>
    <Label text="Enter your Username"/>
    <TextField fx:id="usernameTextField" maxWidth="200.0" prefHeight="36.0" prefWidth="150.0"
               styleClass="loginRegister"/>
    <Label text="Create a password"/>
    <PasswordField fx:id="passwordField" maxWidth="200.0" prefHeight="36.0" prefWidth="150.0"
                   styleClass="loginRegister"/>
    <Label text="Repeat password"/>
    <PasswordField fx:id="repeatPasswordField" maxWidth="200.0" prefHeight="36.0" prefWidth="150.0"
                   styleClass="loginRegister"/>
    <Label fx:id="errorLabel" textFill="RED"/>
    <HBox alignment="CENTER" prefHeight="66.0" prefWidth="600.0" spacing="20.0">
        <Pane prefHeight="66.0" prefWidth="230.0"/>
        <Button fx:id="signUpButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#signUpButtonPressed"
                styleClass="greenButton" text="Sign up">
        </Button>
        <Label/>
        <Button fx:id="backButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#backButtonPressed"
                prefHeight="25.0" prefWidth="57.0" styleClass="redButton" text="Back">
        </Button>
    </HBox>
</VBox>
