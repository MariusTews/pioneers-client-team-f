<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.pioneers.controller.MapTemplatesScreenController">
    <Label styleClass="white-title" text="Map Templates">
        <VBox.margin>
          <Insets bottom="20.0" />
        </VBox.margin>
    </Label>
    <VBox prefHeight="400.0" prefWidth="900.0" styleClass="map-templates-box">
        <VBox.margin>
            <Insets />
        </VBox.margin>
        <HBox prefHeight="20.0" prefWidth="600.0">
            <HBox id="descriptionHBox" prefHeight="20.0" prefWidth="540.0">
                <HBox.margin>
                    <Insets left="24.0" />
                </HBox.margin>
                <Label style="-fx-text-fill: white" text="Name">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ImageView fx:id="nameArrow" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                <Label style="-fx-text-fill: white" text="| Created By">
                    <HBox.margin>
                        <Insets left="120.0" />
                    </HBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ImageView fx:id="createdByArrow" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                <Label style="-fx-text-fill: white" text="| Votes">
                    <HBox.margin>
                        <Insets left="120.0" />
                    </HBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ImageView fx:id="votesArrow" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
            </HBox>
            <Label fx:id="selectedLabel" style="-fx-text-fill: white" text="Selected: Default">
                <font>
                    <Font size="14.0" />
                </font>
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
            </Label>
        </HBox>
        <ListView fx:id="mapTemplatesListView" prefHeight="340.0" prefWidth="800.0" styleClass="map-templates-list-view">
         <VBox.margin>
            <Insets top="12.0" />
         </VBox.margin></ListView>
      <padding>
         <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
      </padding>
    </VBox>
    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
        <VBox.margin>
            <Insets left="20.0" right="20.0" />
        </VBox.margin>
        <Button fx:id="backButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBackButtonPressed" styleClass="redButton" text="Back" />
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="820.0">
            <Button fx:id="createButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onCreateButtonPressed" styleClass="blueButton" text="Create" />
            <Button fx:id="selectButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSelectButtonPressed" styleClass="greenButton" text="Select" />
        </HBox>
    </HBox>
</VBox>
