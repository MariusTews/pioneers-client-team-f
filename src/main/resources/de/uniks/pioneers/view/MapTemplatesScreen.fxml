<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="BOTTOM_CENTER" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.pioneers.controller.MapTemplatesScreenController">
    <Label text="Map Templates">
        <VBox.margin>
          <Insets bottom="12.0" />
        </VBox.margin>
    </Label>
    <VBox prefHeight="430.0" prefWidth="900.0">
        <VBox.margin>
            <Insets />
        </VBox.margin>
        <HBox prefHeight="20.0" prefWidth="600.0">
            <HBox prefHeight="20.0" prefWidth="700.0">
                <HBox.margin>
                    <Insets left="24.0" />
                </HBox.margin>
                <Label text="Name">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ImageView fx:id="nameArrow" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                <Label text="| Created By">
                    <HBox.margin>
                        <Insets left="150.0" />
                    </HBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ImageView fx:id="createdByArrow" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                <Label text="| Votes">
                    <HBox.margin>
                        <Insets left="150.0" />
                    </HBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ImageView fx:id="votesArrow" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
            </HBox>
            <Label fx:id="selectedLabel" text="Selected: Default">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
        </HBox>
        <ListView fx:id="mapTemplatesListView" prefHeight="230.0" prefWidth="600.0" />
    </VBox>
    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
        <VBox.margin>
            <Insets left="20.0" right="20.0" />
        </VBox.margin>
        <Button fx:id="backButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBackButtonPressed" styleClass="redButton" text="Back" />
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="820.0" spacing="20.0">
            <Button fx:id="createButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onCreateButtonPressed" styleClass="blueButton" text="Create" />
            <Button fx:id="selectButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSelectButtonPressed" styleClass="greenButton" text="Select" />
        </HBox>
    </HBox>
</VBox>
